{
    "manifest_version": 2,
	"name": "亦歌扩展",
	"version": "1.4.2",
	"description": "亦歌的Chrome插件，轻轻松松用亦歌",
	
	"icons": {
		"48": "img/icon48-red.png",
		"128": "img/icon128-red.png"
	},
	
	"background": { "page": "background.html" },
	
	"browser_action": {
		"default_icon": "img/icon32-blue.png",
		"default_popup": "minipane.html"
	},
    
    "content_scripts": [
		{
			"matches": ["http://music1g.sinaapp.com/commander"],
			"js": ["js/contentscript.js"],
            "all_frames": true
		}
	],
	
	"permissions": [
		"tabs",
		"notifications"
	]
}
